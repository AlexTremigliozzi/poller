<p id="notice"><%= notice %></p>

<h1>Listing Post Selections</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Selection</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_selections.each do |post_selection| %>
      <tr>
        <td><%= post_selection.post_id %></td>
        <td><%= post_selection.selection_id %></td>
        <td><%= link_to 'Show', post_selection %></td>
        <td><%= link_to 'Edit', edit_post_selection_path(post_selection) %></td>
        <td><%= link_to 'Destroy', post_selection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


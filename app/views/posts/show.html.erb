<div class="container">
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-8">
      <!-- Title -->
      <h1 class="mt-4"><%= @post.title %></h1>
      <!-- Author -->
      <p class="lead"> by <a href="#"><%= @post.user.name %></a></p>
      <hr>
      <!-- Date/Time -->
      <p>Posted on <%= @post.created_at %></p>
      <hr>
      <p><%@post.categories.each do |categ| %>
          <i><%=categ.name%></i>&nbsp;
      <%end%>

      </p>
      <hr>
      <!-- Post Content -->
      <p class="lead"><%= @post.description %> </p>
      <hr>
      <p>
        <strong>Mentions:</strong>
        <% @post.mentioned_users.each do |m|%>
        <%=m.name%>
        <%end%>
      </p>

      <hr>
      <!-- Comments Form -->
      <%= render partial: "comments/form"%>

      <%= render partial: "comments/reply", locals: {comments: @comment.commentable.root_comments} %>

    </div>


    <div class="col-md-4">
      <!-- Categories Widget -->
      <div class="card my-4">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <ul class="list-unstyled mb-0">
                <li>
                  <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary' %>
                  &nbsp;<%= link_to 'Back', posts_path, class: 'btn btn-default'%>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>


  </div>
</div>
